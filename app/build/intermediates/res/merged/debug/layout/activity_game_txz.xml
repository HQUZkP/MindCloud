<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_pre_level"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/btn_start_main_selector"
            android:text="上一关"
            android:textColor="@drawable/btn_start_main_textcolor_selector" />

        <Button
            android:id="@+id/btn_next_level"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/btn_start_main_selector"
            android:text="下一关"
            android:textColor="@drawable/btn_start_main_textcolor_selector" />

        <Button
            android:id="@+id/btn_undo"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/btn_start_main_selector"
            android:text="撤销"
            android:textColor="@drawable/btn_start_main_textcolor_selector" />

        <Button
            android:id="@+id/btn_back_out"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/btn_start_main_selector"
            android:text="返回"
            android:textColor="@drawable/btn_start_main_textcolor_selector" />

    </LinearLayout>

        <com.kaipingzhou.mindcloud.gamesokoban.GameView
            android:id="@+id/gameview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center"
            android:focusable="true" />

</RelativeLayout>