<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout style="@style/PersonalPagerLayoutStyle">

                <RelativeLayout style="@style/FindBottomStyle">

                    <ImageView
                        android:id="@+id/iv_personal_photo"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:padding="5dp"
                        android:src="@mipmap/logo" />

                    <ImageView
                        android:id="@+id/iv_personal_update"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:paddingTop="5dp"
                        android:src="@drawable/personal_pager_update" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/iv_personal_update"
                        android:layout_centerInParent="true"
                        android:text="更新个人信息"
                        android:textColor="#99000000"
                        android:textSize="18sp" />

                    <ImageView
                        android:id="@+id/iv_update_psd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:paddingTop="5dp"
                        android:src="@drawable/personal_pager_enter" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_below="@id/iv_update_psd"
                        android:text="修改密码"
                        android:textColor="#99000000"
                        android:textSize="18sp" />

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                style="@style/PersonalPagerLayoutStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_personal_info"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:text="个人信息"
                    android:textColor="#000000"
                    android:textSize="18sp" />

            </LinearLayout>

            <Button
                android:id="@+id/btn_personal_logout"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:background="@drawable/btn_start_main_selector"
                android:text="退出登录"
                android:textColor="@drawable/btn_start_main_textcolor_selector"
                android:textSize="20sp" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>
